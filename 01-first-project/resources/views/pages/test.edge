  <!-- Features Section -->
  <section class="container mx-auto px-6 py-20 text-center">
    <div class="flex justify-center mb-4">
      <div
        class="inline-flex items-center px-4 py-2 rounded-full text-sm bg-background-light bg-opacity-40 backdrop-blur-sm">
        <svg class="w-4 h-4 mr-2 text-primary" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 20 20"
          fill="currentColor">
          <path fill-rule="evenodd"
            d="M5 2a1 1 0 011 1v1h1a1 1 0 010 2H6v1a1 1 0 01-2 0V6H3a1 1 0 010-2h1V3a1 1 0 011-1zm0 10a1 1 0 011 1v1h1a1 1 0 110 2H6v1a1 1 0 11-2 0v-1H3a1 1 0 110-2h1v-1a1 1 0 011-1zm7-10a1 1 0 01.707.293l.707.707L15.414 4l.707-.707a1 1 0 111.414 1.414l-.707.707 1.414 1.414a1 1 0 01-1.414 1.414l-1.414-1.414-.707.707a1 1 0 01-1.414-1.414l.707-.707L12.414 4l-.707-.707A1 1 0 0112 2z"
            clip-rule="evenodd" />
